@model IEnumerable<Maple2.AdminLTE.Uil.Areas.Master.Models.MachineLabelModel>
@{
    ViewData["Title"] = "MachineLabel";
    Layout = null;
}
<html>
<head>
    <link href="~/css/report/machinelabel_report.css" type="text/css" rel="stylesheet" />
</head>
<body>
    @{
        int i = 1;
        foreach (var item in Model)
        {
        if ((i % 2) != 0)
        {
        @:</div><div class="row">
        }
            <div class="column">
                <div class="card">
                    <div class="form-group">
                        @if (item.QR_CODE != null)
                        {
                            <img src="@item.QR_CODE" alt="" style="height:70px;width:70px" />
                        }
                        <div>
                            <h1>@item.MachineCode</h1>
                        </div>
                    </div>
                    <div class="form-group">
                        <div>
                            <h1>Machine : </h1>
                        </div>
                        <div>
                            <h1>@item.MachineName</h1>
                        </div>
                    </div>
                </div>
            </div>
        @if ((i % 2) != 1)
        {
            @:<div></div>
        }

        @if ((i % 4) == 0)
        {
            <div style="page-break-before: always;"></div>
        }

        i++;
        }
    }

</body>
</html>
